extends layout

block head
	script(src="javascripts/jquery.flot.min.js")
	script(src="javascripts/jquery.flot.time.js")
	script
		//var sensors = !{sensors};	cl(sensors);
		$(document).on('pageshow', function() {
			charts();
			
			$("input[type='radio']").bind( "change", function(event, ui) {
				charts(this.value);
			});
			
			setInterval(function() {
				if($('#chart_wr').is(':visible')) charts();
			},30000);

		});
		


block content
	div(data-role="fieldcontain",style="margin:0 auto; width:200px;padding-left:50px")
		fieldset(data-role="controlgroup", data-type="horizontal",data-mini="true")
			input(type="radio", name="rv", id="ra", value="yday")
			label(for="ra") Yesterday
			input(type="radio", name="rv", id="rb", value="today", checked="checked")
			label(for="rb") Today


	div(class="ui-grid-a", id="chart_wr")
		div(class="ui-block-a chart-container", id="chart1")
			h3() Freezer
			div(class="chart")
			
		
		div(class="ui-block-b chart-container", id="chart2")
			h3() Front Room
			div(class="chart")
			
		div(class="ui-block-a chart-container", id="chart3")
			h3
			div(class="chart")
			
		div(class="ui-block-b chart-container", id="chart4")
			h3
			div(class="chart")
