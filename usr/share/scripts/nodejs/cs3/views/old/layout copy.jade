doctype 5
html
	head
		- var app="C00Lsense - "
		meta(charset ="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")		
		link(rel="stylesheet", href="stylesheets/jquery.mobile-1.3.1.min.css")
		link(rel="stylesheet", href="stylesheets/style.css")
		script(src="javascripts/jquery-1.9.1.min.js")
		script(src="javascripts/jquery.mobile-1.3.1.min.js")
		script(src="javascripts/jquery.jqprint-0.3.js")
		script(src="javascripts/jquery.flot.min.js")
		script(src="javascripts/jquery.flot.time.js")
		script(src="javascripts/jquery.flot.threshold.min.js")
		script(src="javascripts/main.js")
		title=app+title
		script
			$(document).on('pageshow', function(e,ui) {
				cl('Global Show, Last Page ID: '+ui.prevPage.attr('id'));
			});
		
		block head
	body
		div(data-role="page", class="ui-responsive-panel",id=title)
			div(data-role="header", data-theme="b", data-position="fixed", id="header")
				h1=app+title
				a(href="#nav-panel", data-icon="bars", data-iconpos="notext") Menu
				a(href="#", data-icon="refresh", data-iconpos="notext",id="now") Add
		
			div(data-role="content", class="jqm-content", id="contentDiv")
				block content
			
			div(data-role="panel", data-position-fixed="true", data-theme="b", id="nav-panel", data-display="overlay")

				ul(data-role="listview", data-theme="b", class="nav-search", id="custom-listview")

					li(data-icon="delete",data-theme="a")
						a(href="#", data-rel="close") Close Menu
					li(data-icon="home")
						a(href="./") Home

					li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() Reports
							ul(data-role="listview", data-inset="false")
								li()
									a(href="#",data-iconpos="right") Freezer Diary

					li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() System Setup
							ul(data-role="listview", data-inset="false")
								li()
									a(href="sched",data-iconpos="right") Schedule
								li()
									a(href="sensors",data-iconpos="right") Sensors
								li()
									a(href="#",data-iconpos="right") System Options	
													
					li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() Graphs
							ul(data-role="listview", data-inset="false")
								- each row in sensors
									li()
										a(href="sensor?did="+row.macid+'_'+row.id,class="spage",xdata-ajax="false")=row.id+'.'+row.info