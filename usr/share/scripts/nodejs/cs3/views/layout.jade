doctype 5
html
	head
		meta(charset ="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")		
		link(rel="stylesheet", href="stylesheets/jquery.mobile-1.3.1.min.css")
		link(rel="stylesheet", href="stylesheets/style.css")
		script(type="text/javascript", src="javascripts/async.js")
		script(src="javascripts/jquery-1.9.1.min.js")
		script(src="javascripts/jquery.mobile-1.3.1.min.js")
		script(src="javascripts/jquery.jqprint-0.3.js")
		script(src="javascripts/jquery.flot.min.js")
		script(src="javascripts/jquery.flot.time.js")
		script(src="javascripts/jquery.flot.threshold.min.js")
		script(src="javascripts/main.js")
		block head
	body
		div#panel(data-role="page", class="ui-responsive-panel",data-location=glob.location)
			div(data-role="header", data-theme="b", data-position="fixed", id="header")
				H1 C00Lsense V3
				a(href="#nav-panel", data-icon="bars", data-iconpos="left") Menu
				a(href="@home", data-icon="home", data-iconpos="right",id="now") Home
		
			div(data-role="content", class="jqm-content", id="contentDiv")
				block content
				
				<!--- POPUP --->
				div(data-role="popup",data-overlay-theme="a", data-theme="c", style="min-width:300px; max-width:500px;", class="ui-corner-all")#popup
					div(data-role="header", class="ui-corner-top")#pophead
						h1#poptitle
					div(data-role="content", data-theme="d", class="ui-corner-bottom ui-content",style="text-align:center;")
						p#popmsg
			
			div(data-role="panel", data-position-fixed="true", data-theme="b", id="nav-panel", data-display="overlay")

				ul(data-role="listview", data-theme="b", class="nav-search", id="custom-listview")

					li(data-icon="delete",data-theme="a")
						a(href="#", data-rel="close") Close Menu
					li(data-icon="home")
						a(href="@home")#nhome Home

					//li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() Reports
							ul(data-role="listview", data-inset="false")
								li()
									a(href="@home",data-iconpos="right") Freezer Diary

					li(data-icon="",data-theme="b")
						a(href="@schedule") Schedules

					li(data-icon="",data-theme="b")
						a(href="@zones") Zones

					li(data-icon="",data-theme="b")
						a(href="@global") Global Settings

					li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() System Config
							ul(data-role="listview", data-inset="false")
								li()
									a(href="@wifi",data-iconpos="right") Wireless Lan
								li()
									a(href="@dbadmin",data-iconpos="right") Database Admin
								li()
									a(href="@update",data-iconpos="right") Update	
								li()
									a(href="@logs",data-iconpos="right") Log Files

						
					//li(class="custom-li")
						div(data-role="collapsible", data-theme="b", class="custom-collapsible",data-iconpos="right")
							h3() Graphs
							ul(data-role="listview", data-inset="false")
								//- each row in sensors
									li()
										a(href="sensor?did="+row.macid+'_'+row.id,class="spage",xdata-ajax="false")=row.id+'.'+row.info
										
					//li(data-icon="",data-theme="b")
						a(href="@sensor") Sensor
